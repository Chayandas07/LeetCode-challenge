class Solution {
public:
    int findMin(vector<int>& nums) {
        
        int n=nums.size();
        int ans=nums[0];

        int l=0,r=n-1;

        while(l<=r){
            int mid=l+(r-l)/2;

            if(nums[mid]==nums[l] && nums[mid]==nums[r]  ){
              
                if(l+1<n && r-1>=0 && l+1<=r-1){
                r--;
                l++;
                continue;
                }
               
            }

            if(nums[mid]>=nums[l]){
                 
                    ans=min(ans,nums[l]);
                    l=mid+1;
               
                 
            }
            else{
                
               
                    ans=min(ans,nums[mid]);
                    r=mid-1;
               
    
            }
            
        }

        return ans;
    }
};