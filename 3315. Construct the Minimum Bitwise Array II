class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> ans;
        ans.reserve(nums.size());
        
        for (int x : nums) {
            if (x == 2) {
                ans.push_back(-1);
            } else {
                long long val = x;
                long long lowbit = (val + 1) & -(val + 1);
                ans.push_back(x - (lowbit >> 1));
            }
        }
        return ans;
    }
};
